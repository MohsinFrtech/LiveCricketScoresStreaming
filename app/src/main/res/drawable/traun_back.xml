<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.7dp"


                android:color="#74849C" /> <!-- Semi-transparent black shadow -->
            <corners android:radius="@dimen/_15sdp" /> <!-- Match the dialog's corner radius -->
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Your dialog's background color -->
            <corners android:radius="0sp" /> <!-- Match the dialog's corner radius -->
        </shape>
    </item>
</layer-list>