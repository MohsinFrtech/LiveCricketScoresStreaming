<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_navigation"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/settingText"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Settings"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/horizontalLine"
            android:layout_height="2sp"
            app:layout_constraintTop_toBottomOf="@+id/settingText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabsResolution"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            app:tabIndicatorHeight="@dimen/_3sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/horizontalLine"
            android:background="@android:color/transparent"
            app:tabIconTint="@color/tab_file"
            app:tabIndicatorColor="@color/gnt_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:id="@+id/horizontalLine2"
            android:visibility="gone"
            android:layout_height="1sp"
            app:layout_constraintTop_toBottomOf="@+id/tabsResolution"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorAccent"
            />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabsResolution" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>