<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerPopup" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:popupBackground">@drawable/bg_spinner_popup</item>
        <item name="android:dropDownVerticalOffset">45dp</item>
        <item name="android:textStyle">bold</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>



    <style name="SpinnerItem_example" parent="android:TextAppearance.DeviceDefault.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>
    <style name="TransparentBackgroundDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
</resources>